{
    "manifest_version": 3,
    "author": "Andrei Kuminov (akumidv)",
    "description": "An assistant for backtesting trading strategies and showing external signals in Tradingview",
    "name": "Tradingview assistant",

    "version": "3.0.0",
    "icons": {
            "16": "images/tv_assist_16.png",
            "32": "images/tv_assist_32.png",
            "48": "images/tv_assist_48.png",
            "64": "images/tv_assist_64.png",
            "128": "images/tv_assist_128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*.tradingview.com/chart/*"],
            "js": [ "lib/plotly.min.js",
              "content_scripts/selector.js",
              "content_scripts/page.js", "content_scripts/file.js",
              "content_scripts/storage.js",

              "content_scripts/tv/tv.js",
              "content_scripts/tv/chart.js",
              "content_scripts/tv/indicatorInput.js", "content_scripts/tv/indicators.js",

              "content_scripts/ui/ui.js",
              "content_scripts/ui/3DChart.js", "content_scripts/ui/uploadingSignals.js",
              "content_scripts/ui/attaching.js","content_scripts/ui/backtestParameters.js",

              "content_scripts/model.js","content_scripts/backtest.js",

              "content_scripts/action/action.js",
              "content_scripts/action/uploadingSignals.js", "content_scripts/action/parameters.js",

              "content_scripts/controller.js"
              ],
            "run_at": "document_end"
        }
    ],
    "permissions": ["storage", "unlimitedStorage", "activeTab"],
    "action": {
          "default_icon": {
            "16": "images/tv_assist_16.png",
            "32": "images/tv_assist_32.png",
            "48": "images/tv_assist_48.png",
            "64": "images/tv_assist_64.png",
            "128": "images/tv_assist_128.png"
          },
          "default_title": "TV",
          "default_popup": "popup/assistant.html"
    },
    "web_accessible_resources": [{
      "resources": ["page-context.js", "fonts/fa-solid-900.woff2", "lib/plotly.min.js"],
      "matches": ["<all_urls>"]
    }]
}
