{
    "manifest_version": 3,
    "author": "Andrei Kuminov (akumidv)",
    "description": "An assistant for backtesting trading strategies and showing external signals in Tradingview",
    "name": "Tradingview assistant",

    "version": "3.0.0",
    "icons": {
            "16": "src/images/tv_assist_16.png",
            "32": "src/images/tv_assist_32.png",
            "48": "src/images/tv_assist_48.png",
            "64": "src/images/tv_assist_64.png",
            "128": "src/images/tv_assist_128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*.tradingview.com/chart/*"],
            "js": [
              "node_modules/plotly.js-gl3d-dist-min/plotly-gl3d.min.js",

              "src/lib/csv.js",
              "src/content_scripts/config.js",
              "src/content_scripts/selector.js",
              "src/content_scripts/namespace.js",
              "src/content_scripts/page.js", "src/content_scripts/file.js",
              "src/content_scripts/storage.js",

              "src/content_scripts/tv/tv.js",
              "src/content_scripts/tv/chart.js",
              "src/content_scripts/tv/indicatorInput.js", "src/content_scripts/tv/indicators.js",

              "src/content_scripts/ui/ui.js",
              "src/content_scripts/ui/3DChart.js", "src/content_scripts/ui/uploadingSignals.js",
              "src/content_scripts/ui/attaching.js","src/content_scripts/ui/backtestParameters.js",

              "src/content_scripts/model.js","src/content_scripts/backtest.js",

              "src/content_scripts/action/action.js",
              "src/content_scripts/action/uploadingSignals.js", "src/content_scripts/action/parameters.js",
              "src/content_scripts/action/backtesting.js",

              "src/content_scripts/controller.js"
              ],
            "run_at": "document_end"
        }
    ],
    "permissions": ["storage", "unlimitedStorage", "activeTab"],
    "action": {
          "default_icon": {
            "16": "src/images/tv_assist_16.png",
            "32": "src/images/tv_assist_32.png",
            "48": "src/images/tv_assist_48.png",
            "64": "src/images/tv_assist_64.png",
            "128": "src/images/tv_assist_128.png"
          },
          "default_title": "TV",
          "default_popup": "src/popup/assistant.html"
    },
    "web_accessible_resources": [{
      "resources": ["src/page/page-context.js", "src/fonts/fa-solid-900.woff2"],
      "matches": ["<all_urls>"]
    }]
}
